# Richmark Foundation - Environment Variables Template
# Copy this file to .env and fill in your actual API keys

# Paystack Configuration (Nigerian Payment Gateway)
REACT_APP_PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key_here
REACT_APP_PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key_here

# Flutterwave Configuration (Alternative Payment Gateway)
REACT_APP_FLUTTERWAVE_PUBLIC_KEY=FLWPUBK_TEST-your_flutterwave_public_key_here
REACT_APP_FLUTTERWAVE_SECRET_KEY=FLWSECK_TEST-your_flutterwave_secret_key_here

# Email Configuration (for donation receipts)
REACT_APP_EMAIL_SERVICE_ID=your_emailjs_service_id
REACT_APP_EMAIL_TEMPLATE_ID=your_emailjs_template_id
REACT_APP_EMAIL_PUBLIC_KEY=your_emailjs_public_key

# Foundation Bank Details (for direct transfers)
REACT_APP_BANK_NAME=First Bank of Nigeria
REACT_APP_ACCOUNT_NAME=Richmark Foundation
REACT_APP_ACCOUNT_NUMBER=1234567890
REACT_APP_SORT_CODE=011151003

# Website Configuration
REACT_APP_FOUNDATION_EMAIL=donate@richmarkfoundation.org.ng
REACT_APP_FOUNDATION_PHONE=+234-901-234-5678
