# Richmark Foundation - Environment Variables Template
# Copy this file to .env and fill in your actual API keys

# Paystack Configuration (Nigerian Payment Gateway)
VITE_PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key_here
VITE_PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key_here

# Flutterwave Configuration (Alternative Payment Gateway)
VITE_FLUTTERWAVE_PUBLIC_KEY=FLWPUBK_TEST-your_flutterwave_public_key_here
VITE_FLUTTERWAVE_SECRET_KEY=FLWSECK_TEST-your_flutterwave_secret_key_here

# EmailJS Configuration (for volunteer forms and contact)
VITE_EMAILJS_SERVICE_ID=your_emailjs_service_id
VITE_EMAILJS_TEMPLATE_ID=template_volunteer
VITE_EMAILJS_CONFIRMATION_TEMPLATE_ID=template_volunteer_confirmation
VITE_EMAILJS_CONTACT_TEMPLATE_ID=template_contact
VITE_EMAILJS_PUBLIC_KEY=your_emailjs_public_key

# Foundation Bank Details (for direct transfers)
VITE_BANK_NAME=First Bank of Nigeria
VITE_ACCOUNT_NAME=Richmark Foundation
VITE_ACCOUNT_NUMBER=1234567890
VITE_SORT_CODE=011151003

# Website Configuration
VITE_FOUNDATION_EMAIL=donate@richmarkfoundation.org.ng
VITE_FOUNDATION_PHONE=+234-901-234-5678
